{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true,
		"include": [
			"./src/**/*.js",
			"./src/**/*.ts",
			"./src/**/*.jsx",
			"./src/**/*.tsx"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 80,
		"ignore": [],
		"include": [
			"./src/**/*.js",
			"./src/**/*.ts",
			"./src/**/*.jsx",
			"./src/**/*.tsx"
		]
	},
	"javascript": {
		"globals": ["$", "_", "externalVariable"],
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded"
		}
	}
}
